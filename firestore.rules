rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow all reads for now (develop locally first, then lock down)
    match /{document=**} {
      allow read: if true;
    }
    
    // Allow writes for authenticated users (optional â€” adjust based on your security needs)
    match /clients/{document=**} {
      allow write: if request.auth != null;
    }
    match /vehicles/{document=**} {
      allow write: if request.auth != null;
    }
    match /assignments/{document=**} {
      allow write: if request.auth != null;
    }
    
    // For development/testing: allow anonymous writes (comment out for production)
    // match /{document=**} {
    //   allow write: if true;
    // }
  }
}
